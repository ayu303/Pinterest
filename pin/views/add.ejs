<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white flex flex-col items-center">
    <h1 class="text-2xl font-bold mb-5">Create a New Post</h1>
    <hr class="opacity-10 w-full mb-5">
    <form class="w-full max-w-md" action="/createpost" method="post" enctype="multipart/form-data">
        <div class="mb-4">
            <label class="block text-sm font-medium mb-2" for="postimage">Upload Image</label>
            <input class="block w-full text-gray-700 bg-gray-200 border border-gray-300 rounded-md px-3 py-2" type="file" name="postimage" id="postimage">
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium mb-2" for="title">Title</label>
            <input class="block w-full text-gray-900 bg-gray-200 border border-gray-300 rounded-md px-3 py-2" type="text" name="title" id="title" placeholder="Title">
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium mb-2" for="description">Description</label>
            <textarea class="block w-full text-gray-900 bg-gray-200 border border-gray-300 rounded-md px-3 py-2" name="description" id="description" placeholder="Description" rows="6"></textarea>
        </div>
        <div class="mb-4">
            <input class="w-full px-3 py-2 text-white bg-red-700 hover:bg-red-600 rounded-md cursor-pointer" type="submit" value="Create Post">
        </div>
    </form>
</div>
<% include ./partials/footer.ejs %>
